        function computeNPV() {
            var initInvestment = parseInt(initCost);
            var acf = parseInt(acfCost);
            var acfg = (parseFloat($("#acfg-slider").val()) / 100);
            var wacc = (parseFloat($("#wacc-slider").val()) / 100);
